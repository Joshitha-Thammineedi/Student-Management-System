# Server Port (optional, default is 8080) 
server.port=8080 
# H2 Database Configuration 
spring.h2.console.enabled=true 
spring.h2.console.path=/h2-console 
spring.datasource.url=jdbc:h2:mem:studentdb;DB_CLOSE_DELAY=
1;DB_CLOSE_ON_EXIT=FALSE 
spring.datasource.driverClassName=org.h2.Driver 
spring.datasource.username=sa 
spring.datasource.password= 
# JPA and Hibernate Configuration 
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect 
spring.jpa.hibernate.ddl-auto=update # Use 'update' for development, 'create' or 'create-drop' 
to recreate schema on startup 
spring.jpa.show-sql=true 
spring.jpa.properties.hibernate.format_sql=true 
# Thymeleaf Configuration 
spring.thymeleaf.cache=false # Set to true for production, false for development 
spring.thymeleaf.prefix=classpath:/templates/ 
spring.thymeleaf.suffix=.html 
